<?xml version="1.0"?>
<package>
  <metadata>
    <id>RobocodeBot</id>
    <version>1.0.4</version>
    <authors>Andrew G</authors>
    <owners>Andrew G</owners>

    <description>Dotnet new template for creating Robocode Tank Royale C# bots.</description>
    <tags>dotnet-new template robocode tankroyale bot</tags>

    <packageTypes>
      <packageType name="Template" />
    </packageTypes>

    <repository type="git" url="https://github.com/Nfjdbfhr/RobocodeBotBuilder" />

    <!-- Optional NuGet display files -->
    <readme>content/MyFirstRoboBot/README.md</readme>
    <license type="file">content/MyFirstRoboBot/LICENSE</license>
  </metadata>

  <files>
    <!-- Include all template files under content/ so dotnet new only sees them -->
    <file src="MyFirstRoboBot\**\*" target="content\MyFirstRoboBot\" />

    <!-- Include the template config folder -->
    <file src=".template.config\**\*" target="content\.template.config\" />
  </files>
</package>
